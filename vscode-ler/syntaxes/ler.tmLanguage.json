{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LER",
	"patterns": [
		{
			"include": "#template-block"
		},
		{
			"include": "#script-block"
		}
	],
	"repository": {
		"template-block": {
			"begin": "(<)(template)(>)",
			"beginCaptures": {
				"1": { "name": "punctuation.definition.tag.begin.xml" },
				"2": { "name": "entity.name.tag.xml" },
				"3": { "name": "punctuation.definition.tag.end.xml" }
			},
			"end": "(</)(template)(>)",
			"endCaptures": {
				"1": { "name": "punctuation.definition.tag.begin.xml" },
				"2": { "name": "entity.name.tag.xml" },
				"3": { "name": "punctuation.definition.tag.end.xml" }
			},
			"patterns": [
				{
					"include": "text.xml"
				}
			]
		},
		"script-block": {
			"begin": "(<)(script)(>)",
			"beginCaptures": {
				"1": { "name": "punctuation.definition.tag.begin.xml" },
				"2": { "name": "entity.name.tag.xml" },
				"3": { "name": "punctuation.definition.tag.end.xml" }
			},
			"end": "(</)(script)(>)",
			"endCaptures": {
				"1": { "name": "punctuation.definition.tag.begin.xml" },
				"2": { "name": "entity.name.tag.xml" },
				"3": { "name": "punctuation.definition.tag.end.xml" }
			},
			"patterns": [
				{
					"include": "source.lua"
				}
			]
		}
	},
	"scopeName": "source.ler"
}
